{
    "font": {
        "bigfont": {
            "font": "VALORANT",
            "size": "36",
            "limit": 35,
            "color": "#ffffff"
        },
        "smallfont": {
            "font": "VALORANT",
            "size": "25",
            "limit": 50,
            "color": "#a0a0a0"
